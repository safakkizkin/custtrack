@model CustTrack.Models.EmployeesModel
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

@ViewBag.Mesaj
<br />
<table class="table table-borderless">
    <thead>
        <tr align="center">
            <th>Adı Soyadı</th>
            <th>Mail</th>
            <th>Yetki derecesi</th>
            <th>Bölümü</th>
            <th>Detay</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model.Employees)
        {
            <tr align="center">
                <td>@employee.employee_name @employee.employee_surname</td>
                <td>@employee.employee_mail</td>
                <td>@Model.Authorities.First(x => x.authority_id == employee.employee_authority_id).authority_name</td>
                <td>@Model.Departmans.First(x => x.department_id == employee.department_id).department_name</td>
                <td><a class="btn btn-outline-dark" href="/Admin/Employee/@employee.employee_id">Detay</a></td>
            </tr>
        }
    </tbody>
</table>
<div align="right" class="col-lg-12">
    <a class="btn btn-secondary" href="/Admin/Employee/0"> Çalışan Ekle</a>
</div>