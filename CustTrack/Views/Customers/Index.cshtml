@using CustTrack.Models.EntityFramework;
@model List<T_Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <br />
    <h3> Şirketlerin Bilgileri </h3>
    <table class="table table-borderless table-responsive-sm table-responsive-md">
        <thead>
            <tr>
                <td align="center"><b>İsim</b></td>
                <td align="center"><b>Sektör</b></td>
                <td align="center"><b>Telefon</b></td>
                <td align="center"><b>Daha fazla</b></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var cust in Model)
            {
                <tr>
                    <td align="center">@cust.customer_company_name</td>
                    <td align="center">@cust.customer_sector</td>
                    <td align="center">@cust.customer_phone</td>
                    <td align="center"><a class="btn btn-outline-secondary" href="/Customers/Update/@cust.customer_id">Detay</a></td>
                </tr>
            }
        </tbody>
    </table>
    <div align="right">
        <a class="btn btn-secondary" href="/Customers/Update/0"> Müşteri Ekle </a>
    </div>
</div>
